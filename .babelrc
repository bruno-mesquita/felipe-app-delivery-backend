{
  "presets": [
    ["@babel/preset-env", { "targets": { "node": "current" } }],
    "@babel/preset-typescript"
  ],
  "plugins": [
    ["@babel/plugin-proposal-decorators", { "legacy": true }],
    ["@babel/plugin-proposal-class-properties", { "loose" : true }],
    "babel-plugin-transform-typescript-metadata",
    [
      "module-resolver",
      {
        "root": ["."],
        "alias": {
          "@config": "./src/config",
          "@modules": "./src/modules",
          "@shared": "./src/shared",
          "@dtos": "./src/dtos"
        }
      }
    ]
  ],
  "ignore": [
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
