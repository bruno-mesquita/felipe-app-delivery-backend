{
  "name": "@flipp/backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsnd -r tsconfig-paths/register --respawn --transpile-only --clear src/index.ts",
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
    "generate:migrations": "babel src/shared/database/migrations-ts --extensions \".js,.ts\" --out-dir src/shared/database/migrations --copy-files --no-copy-ignored",
    "generate:seeds": "babel src/shared/database/seeds-ts --extensions \".js,.ts\" --out-dir src/shared/database/seeds --copy-files --no-copy-ignored",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "test": "cross-env NODE_ENV=test yarn db:seed && jest",
    "db:migrate": "yarn generate:migrations && sequelize db:migrate",
    "db:migrate:drop": "sequelize db:migrate:undo:all",
    "db:seed": "yarn generate:seeds && yarn db:migrate:drop && yarn db:migrate && sequelize db:seed:all",
    "db:migrations": "cross-env NODE_ENV=development tsnd -r tsconfig-paths/register --respawn --transpile-only src/scriptMigrations.ts"
  },
  "dependencies": {
    "axios": "^0.24.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "date-fns": "^2.27.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "mercadopago": "^1.5.9",
    "mongoose": "^6.1.7",
    "morgan": "^1.10.0",
    "pg": "^8.7.1",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.12.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.5",
    "@babel/node": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/faker": "^5.5.9",
    "@types/jest": "^27.0.3",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.0",
    "@types/supertest": "^2.0.11",
    "@types/validator": "^13.7.0",
    "@typescript-eslint/parser": "^5.5.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^8.4.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "faker": "^5.5.3",
    "jest": "^27.4.5",
    "prettier": "^2.5.1",
    "sequelize-cli": "^6.3.0",
    "supertest": "^6.1.6",
    "ts-jest": "^27.1.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.4"
  }
}
