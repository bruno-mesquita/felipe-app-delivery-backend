{
  "name": "@app-delivery/backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=dev tsnd -r tsconfig-paths/register --respawn --transpile-only --clear src/shared/http/server.ts",
    "dev:agiota": "cross-env NODE_ENV=dev tsnd -r tsconfig-paths/register --respawn --transpile-only --clear src/agiota-api/http/server.ts",
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
    "generate:migrations": "babel src/shared/database/migrations-ts --extensions \".js,.ts\" --out-dir src/shared/database/migrations --copy-files --no-copy-ignored",
    "generate:seeds": "babel src/shared/database/seeds-ts --extensions \".js,.ts\" --out-dir src/shared/database/seeds --copy-files --no-copy-ignored",
    "start": "cross-env NODE_ENV=prod node dist/shared/http/server.js",
    "start:agiota": "cross-env NODE_ENV=prod node dist/agiota-api/http/server.js",
    "test": "cross-env NODE_ENV=test jest",
    "db:migrate": "sequelize db:migrate",
    "db:migrate:drop": "sequelize db:migrate:undo:all",
    "db:seed": "yarn db:migrate:drop && yarn db:migrate && sequelize db:seed:all"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "date-fns": "^2.22.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.4.1",
    "jsonwebtoken": "^8.5.1",
    "mercadopago": "^1.5.7",
    "morgan": "^1.10.0",
    "pg": "^8.5.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.6.2",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.14",
    "@babel/core": "^7.13.14",
    "@babel/node": "^7.13.13",
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-typescript": "^7.13.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.10",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.37",
    "@types/validator": "^13.1.3",
    "@typescript-eslint/parser": "^4.20.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "sequelize-cli": "^6.2.0",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.3"
  }
}
